<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE icons [
        <!ELEMENT icons (file|aliases)*>
        <!ELEMENT file (row)*>
        <!ATTLIST file
                name CDATA #REQUIRED
                prefix CDATA #IMPLIED
                cellwidth CDATA #REQUIRED
                cellheight CDATA #REQUIRED>
        <!ELEMENT row (icon)*>
        <!ELEMENT icon (#PCDATA)>
        <!ELEMENT aliases (alias)*>
        <!ELEMENT alias EMPTY>
        <!ATTLIST alias
                icon CDATA #REQUIRED
                alias CDATA #REQUIRED>
        ]>
<icons>
    <!--
    <file
         name= file name (relative to res/)
         (optional) prefix= prepended to icon ids>
     -->

    <!-- Item icons, iconId = "I_" + itemId -->
    <file name="icons/items.png" prefix="I_" cellwidth="36" cellheight="36">
        <row>
            <icon>IncubiD</icon>
        </row>
    </file>

    <!-- Ability icons, iconId = "A_" + abilityId -->
    <!--
     <file name="icons/abilities.png" prefix="A_" cellwidth="36" cellheight="36">
     </file>
     -->

    <!-- Aliases - images sharing IDs -->
    <aliases>
        <!--
            Existing icon "I_IncubiD" is also available under id "I_HairDye"
            <alias icon="I_IncubiD" alias="I_HairDye"/>
        -->
    </aliases>
</icons>
